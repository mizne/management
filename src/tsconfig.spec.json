{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/spec",
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "types": ["jasmine", "node"],
        "paths": {
            "@app/*": ["app/*"],
            "@shared": ["app/shared"],
            "@shared/*": ["app/shared/*"],
            "@core": ["app/core/"],
            "@core/*": ["app/core/*"],
            "@testing": ["testing/"],
            "@testing/*": ["testing/*"],
            "@env": ["environments/"],
            "@env/*": ["environments/*"]
        }
    },
    "files": ["test.ts"],
    "include": ["**/*.spec.ts", "**/*.d.ts"]
}
